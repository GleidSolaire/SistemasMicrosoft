<Window x:Class="AviacaoWPF.WindowPessoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AviacaoWPF"
        mc:Ignorable="d"
        Title="WindowPessoa" Height="450" Width="800">
    <StackPanel Orientation="Vertical">




        <TextBlock x:Name="id"   Text="{Binding Path=Pessoa.Id}"  /> 
        <TextBox x:Name="NomePessoa"  Text="{ Binding Path=Pessoa.Nome}" />
        
    </StackPanel>
</Window>
